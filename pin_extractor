poem = '''Stars and the moon
shine in the sky
white and bright
until the end of the night'''

poem2 = '''The grass is green
here and there
hoping for rain
before it turns yellow'''

poem3 = '''There
once
was
a
dragon'''


def pin_extractor(poems):
  secret_codes = []

  for poem in poems:
      secret_code = ''
      lines = poem.split('\n')

      #put index to each line of the poem
      for line_index, line in enumerate(lines):
          #split each line into words separated by ',' using split()
          words = line.split()
          #Generating the secret code
          if line_index < len(words):
              secret_code += str(len(words[line_index]))
          else:
              secret_code += '0'

      secret_codes.append(secret_code)

  return secret_codes

print(pin_extractor([poem, poem2, poem3]))

